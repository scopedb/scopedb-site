---
interface Props {
  showXlCols?: boolean;
}

const { showXlCols = false } = Astro.props;
---

<section class="mt-[80px]">
  <div
    class={`grid grid-flow-col grid-cols-3 ${showXlCols ? 'xl:grid-cols-4' : ''} grid-rows-3 gap-x-[16px] mt-[80px]`}
  >
    <h3 class="text-[18px] font-semibold mb-[16px]">Join the community</h3>
    <p class="text-[14px] text-[var(--color-secondary)] mb-[16px]">
      More than 10,000 users share questions and best practices in our Slack
      community.
    </p>
    <a class="text-[14px] text-[var(--color-primary)]"> Join Discord </a>
    <h3 class="text-[18px] font-semibold mb-[16px]">General communicate</h3>
    <p class="text-[14px] text-[var(--color-secondary)] mb-[16px]">
      For other queries, please get in touch with us via email.
    </p>
    <a
      class="text-[14px] text-[var(--color-primary)]"
      href="mailto:hello@scopedb.io">hello@scopedb.io</a
    >
    <h3 class="text-[18px] font-semibold mb-[16px]">Documentation</h3>
    <p class="text-[14px] text-[var(--color-secondary)] mb-[16px]">
      Get an overview of ScopeDB's features, integrations, and how to use
      them.
    </p>
    <a
      class="text-[14px] text-[var(--color-primary)]"
      href="https://docs.scopedb.io">ScopeDB Docs</a
    >
  </div>
</section> 
