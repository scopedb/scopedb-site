---
interface Props {
  showXlCols?: boolean;
}

const { showXlCols = false } = Astro.props;
import { ArrowUpRight,Mail,ChevronRight } from '@lucide/astro';

---

<section class="mt-[80px]">
  <div class={`flex flex-col md:flex-row gap-[32px] md:gap-[16px] mt-[80px] ${showXlCols ? 'xl:max-w-none' : 'max-w-[1000px]'}`}>
    <!-- Join the community -->
    <div class="flex-1">
      <h3 class="text-[18px] font-semibold mb-[12px]">Join the community</h3>
      <p class="text-[14px] text-[var(--color-secondary)] mb-[16px] max-w-[300px]">
        More than 10,000 users share questions and best practices in our Slack
        community.
      </p>
      <a class="text-[14px] text-[var(--color-primary)] flex gap-[4px] items-center"> 
        Join Discord <ArrowUpRight width={18} height={18} />
      </a>
    </div>

    <!-- General communicate -->
    <div class="flex-1">
      <h3 class="text-[18px] font-semibold mb-[12px]">General communicate</h3>
      <p class="text-[14px] text-[var(--color-secondary)] mb-[16px] max-w-[300px]">
        For other queries, please get in touch with us via email.
      </p>
      <a
        class="text-[14px] text-[var(--color-primary)] flex gap-[4px] items-center"
        href="mailto:hello@scopedb.io">
        <Mail width={18} height={18} /> hello@scopedb.io
      </a>
    </div>

    <!-- Documentation -->
    <div class="flex-1">
      <h3 class="text-[18px] font-semibold mb-[12px]">Documentation</h3>
      <p class="text-[14px] text-[var(--color-secondary)] mb-[16px] max-w-[300px]">
        Get an overview of ScopeDB's features, integrations, and how to use
        them.
      </p>
      <a
        class="text-[14px] text-[var(--color-primary)] flex gap-[4px] items-center"
        href="https://docs.scopedb.io">
        ScopeDB Docs <ChevronRight width={18} height={18} />
      </a>
    </div>
  </div>
</section> 
